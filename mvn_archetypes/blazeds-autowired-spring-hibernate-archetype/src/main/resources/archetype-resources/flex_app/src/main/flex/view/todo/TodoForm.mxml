<?xml version="1.0" encoding="utf-8"?>
<mx:Panel
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:todo="${package}.view.todo.*"
    xmlns:common="${package}.view.common.*"
	creationComplete="onCreationComplete()"
	styleName="mainPanel"
	width="80%"
   	height="80%"
   	minHeight="400"
   	minWidth="300"
	>
	
	 <mx:Script>
   	<![CDATA[
   		import mx.effects.Glow;
   		import ${package}.model.TodoItem;
   		import ${package}.view.todo.TodoPModel;
   		[Bindable]
		public var todoPModel:TodoPModel; // injected in the view
		
		public function onCreationComplete():void
		{
    		todoPModel.getTodoList();
		}
   	]]>
   </mx:Script>
   
   	<common:Header/>         
  	<mx:HRule styleName="HRule" width="100%"/>
   
   <mx:HDividedBox
      width="100%" height="100%"
      horizontalGap="30"
      paddingTop="5"
      paddingBottom="30"
      paddingLeft="25"
      paddingRight="25">
   
      <todo:TodoListEditor
      	 width="65%"
         id="listPanel"
         todoPModel="{todoPModel}"
         />
      
      <todo:TodoItemEditor
      	 width="35%"
         id="itemPanel"
         todoPModel="{todoPModel}"
         />
   
   </mx:HDividedBox>
   
   <mx:HRule styleName="HRule" width="100%"/> 
    <common:Footer appStatus="{todoPModel.status}"/>
 
	
	
 	
</mx:Panel>