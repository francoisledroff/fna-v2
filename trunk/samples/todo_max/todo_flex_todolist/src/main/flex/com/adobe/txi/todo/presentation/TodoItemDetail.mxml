<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%" xmlns:parsley="http://www.spicefactory.org/parsley">
	
	<s:layout>
		<s:FormLayout />
	</s:layout>
	
	<fx:Declarations>
		<parsley:Configure />
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			[Inject]
			[Bindable]
			public var pm:TodoItemDetailPM;
		]]>
	</fx:Script>
	
	<s:FormItem label="ID" width="100%">
		<s:TextInput text="{ pm.currentTodoItem.id }" width="30" />
	</s:FormItem>
	
	<s:FormItem label="TODO" width="100%" >
		<s:TextArea text="{ pm.currentTodoItem.title }" width="400" height="120"/>
	</s:FormItem>
	
	<s:FormItem width="100%">
		<s:HGroup>
			<!--<s:Button label="Save" enabled="{ pm.canSave }" click="pm.save()"/>
			<s:Button label="Cancel" enabled="{ pm.canCancel }" click="pm.cancel()" />-->
		</s:HGroup>
	</s:FormItem>
</s:Group>
