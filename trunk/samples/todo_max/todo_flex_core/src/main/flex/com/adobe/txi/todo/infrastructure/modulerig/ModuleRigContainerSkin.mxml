<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabled="0.5"
	currentState="loading" xmlns:module="com.adobe.cairngorm.module.*">
	
	<fx:Metadata>
		[HostComponent("com.adobe.txi.todo.infrastructure.modulerig.ModuleRigContainer")]
	</fx:Metadata>
    
    <s:states>
        <s:State name="disabled" />
		<s:State name="loading" />
		<s:State name="error" />
        <s:State name="normal" />
    </s:states>
	
	
	<s:Label text="LOADING..." includeIn="loading" top="100" left="15" />
	
	<s:Label text="An Error Occured during the bootstrap" includeIn="error" top="100" left="15"/>
	
	<module:ModuleViewLoader id="moduleLoader" left="0" right="0" top="90" bottom="0" moduleManager="{ hostComponent.moduleManager }" 
							 skinClass="com.adobe.cairngorm.module.ModuleViewLoaderSkin" includeIn="normal">
		<module:loadPolicy>
			<module:BasicLoadPolicy />
		</module:loadPolicy>
	</module:ModuleViewLoader>
	
	<s:Rect 
		left="0" right="0" top="50" height="40">
		<s:fill>
			<s:LinearGradient 
				x="447.992" y="0"
				scaleX="50"
				rotation="90">
				<s:GradientEntry 
					color="#BEBEC3"
					ratio="0"/>
				<s:GradientEntry 
					color="#979BA5"
					ratio="1"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<s:HGroup id="headerBarContent"
			  left="15" right="15" top="50" height="40"
			  verticalAlign="middle"
			  verticalCenter="0"/>
	
	<s:SkinnableContainer 
		width="100%" height="50"
		backgroundColor="#565b65">
		
		<s:Label 
			left="15"
			color="#FFFFFF"
			fontSize="24"
			fontWeight="bold"
			verticalCenter="0"
			text="{ hostComponent.title }"/>
		
	</s:SkinnableContainer>
    
</s:Skin>
